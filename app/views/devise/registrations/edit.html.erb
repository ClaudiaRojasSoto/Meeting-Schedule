            <span class="absolute right-4 top-1/2 -translate-y-1/2 text-xl">游닎</span>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-sm text-gray-600">
            Esperando confirmaci칩n de: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <div>
          <%= f.label :password, "Nueva Contrase침a", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 border-2 border-purple-300 rounded-xl focus:ring-4 focus:ring-purple-100 focus:border-purple-600 transition text-lg", placeholder: "Dejar en blanco para no cambiar" %>
            <span class="absolute right-4 top-1/2 -translate-y-1/2 text-xl">游</span>
          </div>
          <% if @minimum_password_length %>
            <p class="text-sm text-gray-500 mt-1">M칤nimo <%= @minimum_password_length %> caracteres (deja en blanco si no quieres cambiarla)</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirmar Nueva Contrase침a", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 border-2 border-purple-300 rounded-xl focus:ring-4 focus:ring-purple-100 focus:border-purple-600 transition text-lg" %>
            <span class="absolute right-4 top-1/2 -translate-y-1/2 text-xl">游</span>
          </div>
        </div>

        <div>
          <%= f.label :current_password, "Contrase침a Actual", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-3 border-2 border-purple-300 rounded-xl focus:ring-4 focus:ring-purple-100 focus:border-purple-600 transition text-lg", placeholder: "Requerida para confirmar cambios" %>
