<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <div class="text-6xl mb-4">游닇</div>
      <h2 class="text-4xl font-bold bg-gradient-to-r from-purple-800 to-rose-700 bg-clip-text text-transparent mb-2">
        Crear Cuenta
      </h2>
      <p class="text-gray-600 text-lg">Reg칤strate para comenzar</p>
    </div>

    <div class="bg-white shadow-2xl rounded-2xl p-8 border border-purple-100">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :name, "Nombre Completo", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.text_field :name, autofocus: true, class: "w-full px-4 py-3 border-2 border-purple-300 rounded-xl focus:ring-4 focus:ring-purple-100 focus:border-purple-600 transition text-lg", placeholder: "Juan P칠rez" %>
            <span class="absolute right-4 top-1/2 -translate-y-1/2 text-xl">游녻</span>
          </div>
        </div>

        <div>
          <%= f.label :email, "Correo Electr칩nico", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.email_field :email, autocomplete: "email", class: "w-full px-4 py-3 border-2 border-purple-300 rounded-xl focus:ring-4 focus:ring-purple-100 focus:border-purple-600 transition text-lg", placeholder: "tu@email.com" %>
            <span class="absolute right-4 top-1/2 -translate-y-1/2 text-xl">游닎</span>
          </div>
        </div>

        <div>
          <%= f.label :password, "Contrase침a", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 border-2 border-purple-300 rounded-xl focus:ring-4 focus:ring-purple-100 focus:border-purple-600 transition text-lg", placeholder: "M칤nimo 6 caracteres" %>
            <span class="absolute right-4 top-1/2 -translate-y-1/2 text-xl">游</span>
          </div>
          <% if @minimum_password_length %>
            <p class="text-sm text-gray-500 mt-1">M칤nimo <%= @minimum_password_length %> caracteres</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirmar Contrase침a", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <div class="relative">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 border-2 border-purple-300 rounded-xl focus:ring-4 focus:ring-purple-100 focus:border-purple-600 transition text-lg", placeholder: "Repite la contrase침a" %>
            <span class="absolute right-4 top-1/2 -translate-y-1/2 text-xl">游</span>
          </div>
        </div>

        <div>
          <%= f.submit "Crear Cuenta", class: "w-full px-6 py-4 bg-gradient-to-r from-purple-800 to-purple-700 text-white rounded-xl font-bold text-lg hover:shadow-2xl transition transform hover:scale-105 cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>

    <div class="mt-6 text-center text-sm text-gray-600">
      <p>쯏a tienes cuenta?</p>
      <p class="font-semibold text-purple-700">
        <%= link_to "Inicia sesi칩n aqu칤", new_session_path(resource_name), class: "hover:text-purple-900" %>
      </p>
    </div>
  </div>
</div>
